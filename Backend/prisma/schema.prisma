generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  token    String?

  // Relaci贸n con los mensajes (un usuario puede escribir muchos mensajes)
  messages Message[]
}

model Message {
  id        Int       @id @default(autoincrement())
  message   String
  createdAt DateTime  @default(now())

  // Relaci贸n con el usuario
  userId    Int
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Relaci贸n con el mensaje padre
  parentId  Int?
  parent    Message?  @relation("MessageReplies", fields: [parentId], references: [id], onDelete: Cascade)

  // Relaci贸n con las respuestas (hijos)
  replies   Message[] @relation("MessageReplies")
}


